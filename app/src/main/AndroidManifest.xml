        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmpleLojaAgricola">
        <activity
            android:name=".Users.LogIn"
            android:exported="true"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Users.SignUp"
            android:exported="true"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".Jobs.MyJobs"
            android:exported="true" />
        <activity
            android:name=".Jobs.JobOfferEdit"
            android:exported="true" />
        <activity
            android:name=".Jobs.JobDemandEdit"
            android:exported="true" />
        <activity
            android:name=".Jobs.JobOfferDetailsContact"
            android:exported="true" />
        <activity
            android:name=".Jobs.JobDemandDetailsContact"
            android:exported="true" />
        <activity
            android:name=".Jobs.AddJobOffer"
            android:exported="true"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".Jobs.AddJobDemand"
            android:exported="true"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>